<%= form_for @user, url: update_profile_path, html: { multipart: true } do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :self_introduction %><br>
      <%= f.text_area :self_introduction %>
    </div>

    <div class="field">
      <%= f.label :icon_image, "アイコン画像" %>
      <%= f.file_field :icon_image %>
    </div>
    <%= render 'users/user_icon', user: @user %>  <!--'パーシャルを使用'-->

    </div>
      <label class="btn btn-outline-secondary">
        画像アップロード <%= form.file_field :icon, class: "form-control-file", style: "display: none;" %>
      </label>

    <div class="actions">
      <%= f.submit "プロフィールを更新" %>
    </div>
  <% end %>
