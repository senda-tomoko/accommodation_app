<%= form_for @user, url: update_profile_path, html: { multipart: true } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "個のエラー") %>が発生したため、ユーザー情報を保存できませんでした：</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :self_introduction, "自己紹介" %><br>
    <%= f.text_area :self_introduction %>
  </div>

  <div class="field">
    <%= f.label :icon_image, "アイコン画像" %>
    <%= f.file_field :icon_image %>
  </div>

  <!-- こちらは、ユーザーのアイコン画像を表示するパーシャルとして想定されています。 -->
  <%= render 'users/user_icon', user: @user %>

  <div class="actions">
    <%= f.submit "プロフィールを更新" %>
  </div>
<% end %>
