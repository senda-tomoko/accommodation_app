<div class="room-detail">
  <div class="room-image">
    <% if @room.image.attached? %>
      <%= image_tag room.image %>
    <% else %>
      <%= image_tag 'hotel.png' %>
    <% end %>
  </div>

  <div class="room-info">
    <h2><%= @room.name %></h2>
    <p>住所: <%= @room.address %></p>
    <p><%= @room.detail %></p>
    <p>料金: <%= number_to_currency(@room.price, unit: '￥', delimiter: ',', precision: 0, format: '%u%n~') %></p>


    <!-- 予約関連の入力フォーム -->
    <%= form_with model: [@room, Reservation.new], url: confirm_room_reservations_path(@room), method: :get do |form| %>
      <div class="reservation-fields">
        <p>チェックイン<%= form.date_field :check_in %></p>
        <p>チェックアウト<%= form.date_field :check_out %></p>
        <p>人数<%= form.number_field :number_of_people, in: 1..10, step: 1 %></p>
        <%= form.hidden_field :room_id %>
      </div>

      <%= form.submit "予約する", class: "btn btn-primary" %>
    <% end %>

    <%= link_to '戻る', rooms_path, class: "btn btn-secondary" %> <!-- new画面へのリンク -->
    <%= link_to '編集', edit_room_path(@room), class: "btn btn-secondary" %>
  </div>
</div>
